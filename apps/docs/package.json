{
  "name": "@objectstack/docs",
  "version": "3.0.9",
  "private": true,
  "description": "ObjectStack Protocol Documentation Site",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm --filter @objectstack/spec gen:schema && pnpm --filter @objectstack/spec gen:docs && next build",
    "site:start": "next start",
    "site:lint": "next lint",
    "types:check": "fumadocs-mdx && next typegen && tsc --noEmit",
    "postinstall": "fumadocs-mdx"
  },
  "dependencies": {
    "fumadocs-core": "16.6.3",
    "fumadocs-mdx": "14.2.7",
    "fumadocs-ui": "16.6.3",
    "lucide-react": "^0.574.0",
    "next": "16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.1"
  },
  "devDependencies": {
    "@objectstack/spec": "workspace:*",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/mdx": "^2.0.13",
    "@types/negotiator": "^0.6.4",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "negotiator": "^1.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "zod": "4.3.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
