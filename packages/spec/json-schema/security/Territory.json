{
  "$ref": "#/definitions/Territory",
  "definitions": {
    "Territory": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 2,
          "pattern": "^[a-z][a-z0-9_]*$",
          "description": "Territory unique name (lowercase snake_case)"
        },
        "label": {
          "type": "string",
          "description": "Territory Label (e.g. \"West Coast\")"
        },
        "modelId": {
          "type": "string",
          "description": "Reference to the Territory Model this territory belongs to"
        },
        "parent": {
          "type": "string",
          "description": "Parent Territory for hierarchical organization"
        },
        "type": {
          "type": "string",
          "enum": [
            "geography",
            "industry",
            "named_account",
            "product_line"
          ],
          "description": "Territory type classification",
          "default": "geography"
        },
        "assignmentRule": {
          "type": "string",
          "description": "Formula/criteria for automatic account assignment to this territory"
        },
        "assignedUsers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "User IDs assigned to manage this territory"
        },
        "accountAccess": {
          "type": "string",
          "enum": [
            "read",
            "edit"
          ],
          "default": "read",
          "description": "Access level for accounts in this territory"
        },
        "opportunityAccess": {
          "type": "string",
          "enum": [
            "read",
            "edit"
          ],
          "default": "read",
          "description": "Access level for opportunities in this territory"
        },
        "caseAccess": {
          "type": "string",
          "enum": [
            "read",
            "edit"
          ],
          "default": "read",
          "description": "Access level for cases in this territory"
        }
      },
      "required": [
        "name",
        "label",
        "modelId"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}