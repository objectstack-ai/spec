{
  "$ref": "#/definitions/SharingRule",
  "definitions": {
    "SharingRule": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z_][a-z0-9_]*$",
          "description": "Unique rule name"
        },
        "label": {
          "type": "string"
        },
        "active": {
          "type": "boolean",
          "default": true
        },
        "object": {
          "type": "string",
          "description": "Object to share"
        },
        "type": {
          "type": "string",
          "enum": [
            "owner",
            "criteria",
            "manual",
            "guest"
          ],
          "default": "criteria"
        },
        "criteria": {
          "type": "string"
        },
        "accessLevel": {
          "type": "string",
          "enum": [
            "read",
            "edit"
          ],
          "default": "read"
        },
        "sharedWith": {
          "type": "string",
          "description": "Group/Role ID to share records with"
        }
      },
      "required": [
        "name",
        "object",
        "sharedWith"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}