            "bar",
            "horizontal-bar",
            "column",
            "grouped-bar",
            "stacked-bar",
            "line",
            "area",
            "stacked-area",
            "step-line",
            "pie",
            "donut",
            "funnel",
            "scatter",
            "bubble",
            "treemap",
            "sunburst",
            "sankey",
            "gauge",
            "metric",
            "kpi",
            "choropleth",
            "bubble-map",
            "heatmap",
            "radar",
            "waterfall",
            "box-plot",
            "violin",
            "table",
            "pivot"
          ]
        },
        "title": {
          "type": "string",
          "description": "Chart title"
        },
        "description": {
          "type": "string",
          "description": "Chart description"
        },
        "showLegend": {
          "type": "boolean",
