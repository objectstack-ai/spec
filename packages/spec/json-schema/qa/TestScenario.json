                      "type": "string",
                      "description": "Field path in the result to check (e.g. \"body.data.0.status\")"
                    },
                    "operator": {
                      "type": "string",
                      "enum": [
                        "equals",
                        "not_equals",
                        "contains",
                        "not_contains",
                        "is_null",
                        "not_null",
                        "gt",
                        "gte",
                        "lt",
                        "lte",
                        "error"
                      ],
                      "description": "Comparison operator to use"
                    },
                    "expectedValue": {
