{
  "$ref": "#/definitions/FieldOperators",
  "definitions": {
    "FieldOperators": {
      "type": "object",
      "properties": {
        "$eq": {
          "description": "Equal to comparison operator"
        },
        "$ne": {
          "description": "Not equal to comparison operator"
        },
        "$gt": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "object",
              "properties": {
                "$field": {
                  "type": "string",
                  "description": "Field Reference/Column Name"
                }
              },
              "required": [
                "$field"
              ],
              "additionalProperties": false
            }
          ],
          "description": "Greater than comparison operator"
        },
        "$gte": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "object",
              "properties": {
                "$field": {
                  "type": "string",
                  "description": "Field Reference/Column Name"
                }
              },
              "required": [
                "$field"
              ],
              "additionalProperties": false
            }
          ],
          "description": "Greater than or equal to comparison operator"
        },
        "$lt": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "object",
              "properties": {
                "$field": {
                  "type": "string",
                  "description": "Field Reference/Column Name"
                }
              },
              "required": [
                "$field"
              ],
              "additionalProperties": false
            }
          ],
          "description": "Less than comparison operator"
        },
        "$lte": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "object",
              "properties": {
                "$field": {
                  "type": "string",
                  "description": "Field Reference/Column Name"
                }
              },
              "required": [
                "$field"
              ],
              "additionalProperties": false
            }
          ],
          "description": "Less than or equal to comparison operator"
        },
        "$in": {
          "type": "array",
          "description": "Value is in the specified list"
        },
        "$nin": {
          "type": "array",
          "description": "Value is not in the specified list"
        },
        "$between": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": [
            {
              "anyOf": [
                {
                  "type": "number"
                },
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "object",
                  "properties": {
                    "$field": {
                      "type": "string",
                      "description": "Field Reference/Column Name"
                    }
                  },
                  "required": [
                    "$field"
                  ],
                  "additionalProperties": false
                }
              ]
            },
            {
              "anyOf": [
                {
                  "type": "number"
                },
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "object",
                  "properties": {
                    "$field": {
                      "type": "string",
                      "description": "Field Reference/Column Name"
                    }
                  },
                  "required": [
                    "$field"
                  ],
                  "additionalProperties": false
                }
              ]
            }
          ],
          "description": "Value is between min and max (inclusive)"
        },
        "$contains": {
          "type": "string",
          "description": "String contains the specified substring"
        },
        "$startsWith": {
          "type": "string",
          "description": "String starts with the specified prefix"
        },
        "$endsWith": {
          "type": "string",
          "description": "String ends with the specified suffix"
        },
        "$null": {
          "type": "boolean",
          "description": "Check if value is null (true) or not null (false)"
        },
        "$exists": {
          "type": "boolean",
          "description": "Check if field exists in the document (NoSQL databases)"
        }
