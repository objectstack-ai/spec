{
  "$ref": "#/definitions/FormatValidation",
  "definitions": {
    "FormatValidation": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z_][a-z0-9_]*$",
          "description": "Unique rule name"
        },
        "active": {
          "type": "boolean",
          "default": true
        },
        "severity": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info"
          ],
          "default": "error"
        },
        "message": {
          "type": "string",
          "description": "Error message to display"
        },
        "type": {
          "type": "string",
          "const": "format"
        },
        "field": {
          "type": "string"
        },
        "regex": {
          "type": "string"
        },
        "format": {
          "type": "string",
          "enum": [
            "email",
            "url",
            "phone",
            "json"
          ]
        }
      },
      "required": [
        "name",
        "message",
        "type",
        "field"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}