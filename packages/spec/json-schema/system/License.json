{
  "$ref": "#/definitions/License",
  "definitions": {
    "License": {
      "type": "object",
      "properties": {
        "tenantId": {
          "type": "string"
        },
        "planCode": {
          "type": "string"
        },
        "issuedAt": {
          "type": "string",
          "format": "date-time"
        },
        "expiresAt": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "active",
            "expired",
            "suspended",
            "trial"
          ]
        },
        "customFeatures": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "customLimits": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        },
        "signature": {
          "type": "string",
          "description": "Cryptographic signature of the license"
        }
      },
      "required": [
        "tenantId",
        "planCode",
        "issuedAt",
        "status"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}