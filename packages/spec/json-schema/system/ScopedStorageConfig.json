{
  "$ref": "#/definitions/ScopedStorageConfig",
  "definitions": {
    "ScopedStorageConfig": {
      "type": "object",
      "properties": {
        "scope": {
          "type": "string",
          "enum": [
            "temp",
            "cache",
            "data",
            "logs",
            "config",
            "public"
          ],
          "description": "Generic storage scope classification"
        },
        "adapter": {
          "type": "string",
          "enum": [
            "local",
            "memory",
            "s3",
            "gcs",
            "azure",
            "gridfs"
          ],
          "default": "local"
        },
        "location": {
          "type": "string",
          "description": "Root path (local) or Bucket name (remote)"
        },
        "options": {
          "type": "object",
          "additionalProperties": {},
          "description": "Driver specific options (region, endpoint, etc)"
        },
        "quota": {
          "type": "integer",
          "exclusiveMinimum": 0,
          "description": "Max size in bytes"
        }
      },
      "required": [
        "scope",
        "location"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}