{
  "$ref": "#/definitions/SamlAuth",
  "definitions": {
    "SamlAuth": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "saml",
          "description": "Authentication type"
        },
        "entryPoint": {
          "type": "string",
          "format": "uri",
          "description": "SAML IdP entry point URL"
        },
        "issuer": {
          "type": "string",
          "description": "SAML service provider issuer"
        },
        "certificate": {
          "type": "string",
          "description": "SAML IdP certificate (X.509)"
        },
        "privateKey": {
          "type": "string",
          "description": "SAML service provider private key"
        },
        "callbackUrl": {
          "type": "string",
          "format": "uri",
          "description": "SAML assertion consumer service URL"
        },
        "signatureAlgorithm": {
          "type": "string",
          "enum": [
            "sha1",
            "sha256",
            "sha512"
          ],
          "default": "sha256",
          "description": "SAML signature algorithm"
        },
        "wantAssertionsSigned": {
          "type": "boolean",
          "default": true,
          "description": "Require signed SAML assertions"
        },
        "identifierFormat": {
          "type": "string",
          "description": "SAML NameID format"
        }
      },
      "required": [
        "type",
        "entryPoint",
        "issuer",
        "certificate"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}