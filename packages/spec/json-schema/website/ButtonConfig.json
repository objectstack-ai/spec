{
  "$ref": "#/definitions/ButtonConfig",
  "definitions": {
    "ButtonConfig": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "Button text"
        },
        "href": {
          "type": "string",
          "description": "Button target URL or action"
        },
        "variant": {
          "type": "string",
          "enum": [
            "primary",
            "secondary",
            "outline",
            "ghost",
            "link"
          ],
          "default": "primary"
        },
        "size": {
          "type": "string",
          "enum": [
            "sm",
            "md",
            "lg"
          ],
          "default": "md"
        },
        "target": {
          "type": "string",
          "enum": [
            "_self",
            "_blank"
          ],
          "default": "_self"
        },
        "icon": {
          "type": "string",
          "description": "Icon name"
        }
      },
      "required": [
        "text",
        "href"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}