{
  "$ref": "#/definitions/EmailPasswordConfig",
  "definitions": {
    "EmailPasswordConfig": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "requireEmailVerification": {
          "type": "boolean",
          "default": true,
          "description": "Require email verification before login"
        },
        "minPasswordLength": {
          "type": "number",
          "minimum": 6,
          "maximum": 128,
          "default": 8,
          "description": "Minimum password length"
        },
        "requirePasswordComplexity": {
          "type": "boolean",
          "default": true,
          "description": "Require uppercase, lowercase, numbers, symbols"
        },
        "allowPasswordReset": {
          "type": "boolean",
          "default": true,
          "description": "Enable password reset functionality"
        },
        "passwordResetExpiry": {
          "type": "number",
          "default": 3600,
          "description": "Password reset token expiry in seconds"
        }
      },
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}