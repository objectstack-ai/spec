{
  "name": "@objectstack/metadata",
  "version": "1.0.3",
  "license": "Apache-2.0",
  "description": "Metadata loading, saving, and persistence for ObjectStack",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./node": {
      "types": "./src/node.ts",
      "import": "./src/node.ts",
      "default": "./src/node.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "objectstack",
    "metadata",
    "persistence",
    "serialization",
    "loader"
  ],
  "dependencies": {
    "@objectstack/core": "workspace:*",
    "@objectstack/spec": "workspace:*",
    "@objectstack/types": "workspace:*",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "chokidar": "^3.5.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.1.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  }
}
